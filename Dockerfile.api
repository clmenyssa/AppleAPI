FROM python:3.11-slim

WORKDIR /app

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Install dependencies for FastAPI mock API server
RUN pip install --no-cache-dir fastapi uvicorn pydantic requests python-dotenv

# Copy mock API server
COPY Infrastructure/mock_api_server.py .

# Expose port
EXPOSE 5001

# Run the mock API with uvicorn
CMD ["uvicorn", "mock_api_server:app", "--host", "0.0.0.0", "--port", "5001"]
